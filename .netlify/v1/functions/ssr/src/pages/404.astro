---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Page Not Found | Isabella Garage Door';
const description = 'Oops! The page you’re looking for doesn’t exist. Play a quick garage game or head back home.';
---

<BaseLayout {title} {description}>

    <h1 class="page-title" style="color: #e74c3c;">404 - Page Not Found</h1>
    <p style="margin-bottom: 2rem; text-align: center;">
      We couldn’t find the page you were looking for.<br />
      But hey, while you're here… want to fix some virtual garage doors?
    </p>

    <!-- Game Embed -->
    <iframe 
      src="/404-game.html"
      title="Garage Door Fix Game"
      loading="lazy"
      style="
        width: 100%;
        max-width: 800px;
        height: 1000px;
        border: none;
        border-radius: 1rem;
        box-shadow: 0 0 2rem rgba(0,0,0,0.2);
        background: white;
        margin: 0 auto;
        display: block;
      "
    ></iframe>

<script>
  window.addEventListener("message", (event) => {
    if (event.data.iframeHeight) {
      const iframe = document.querySelector("iframe[title='Garage Door Fix Game']");
      if (iframe) {
        iframe.style.height = `${event.data.iframeHeight}px`;
      }
    }
  });
</script>


<a href="/" class="cta-button" style="margin: 2rem auto 3rem;">
  <i class="fas fa-arrow-left"></i>
  Back to Homepage
</a>

<section>
  <h2 class="sub-heading">Isabella Garage Door</h2>
  <p style="font-size: .9rem; text-align: center;">
    Oops! We couldn’t find that page — but we’re here to help with all your garage door needs across Central Michigan.
  </p>
  <p style="font-size: .9rem; text-align: center; margin: 0.5rem;">
    <em>Raising Performance. Elevating Standards</em>
  </p>
</section>

</BaseLayout>
