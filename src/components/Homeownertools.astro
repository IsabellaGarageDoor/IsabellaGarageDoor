  <script>
    if (typeof window !== 'undefined') {
      // Animate highlight section (existing)
      const highlightObserver = new IntersectionObserver((entries, observer) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('slide-up-in');
            observer.unobserve(entry.target);
          }
        });
      }, {
        threshold: 0.5,
        rootMargin: '0px 0px -50px 0px'
      });

      window.addEventListener('DOMContentLoaded', () => {
        const highlightSection = document.querySelector('.highlight-section');
        if (highlightSection) {
          highlightObserver.observe(highlightSection);
        }

        // Animate value icon cards with staggered delay
        const iconCards = document.querySelectorAll('.value-icon-card');
        const iconObserver = new IntersectionObserver((entries, iconObs) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              // Add animation with stagger delay based on index
              const index = Array.from(iconCards).indexOf(entry.target);
              entry.target.style.animation = `fadeSlideUp 0.6s ease forwards`;
              entry.target.style.animationDelay = `${index * 150}ms`;
              iconObs.unobserve(entry.target);
            }
          });
        }, { threshold: 0.3 });

        iconCards.forEach(card => iconObserver.observe(card));
      });
    }
  </script>

