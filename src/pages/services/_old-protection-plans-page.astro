<script>
// Animate .plan articles with staggered delay
const plans = document.querySelectorAll('.plan');

const planObserver = new IntersectionObserver((entries, observer) => {
  entries.forEach(entry => {
    if (entry.isIntersecting) {
      const index = Array.from(plans).indexOf(entry.target);
      entry.target.style.animation = `fadeSlideUp 0.6s ease forwards`;
      entry.target.style.animationDelay = `${index * 150}ms`;
      observer.unobserve(entry.target);
    }
  });
}, { threshold: 0.3 });

plans.forEach(plan => planObserver.observe(plan));

</script>

