        grid-template-columns: repeat(4, 1fr);
      }
    }

    /* Animation initial state */
    .value-icon-card {
      display: flex;
      flex-direction: column;
      align-items: center;
      background-color: #ffffff;
      border: 0.094rem solid #b27d57;
      border-radius: 0.75rem;
      padding: 1rem;
      width: 100%;
      box-sizing: border-box;
      max-width: 100%;
